<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chatColor"
    tools:context="com.example.licenta.Register.RegisterMedicActivity">

    <include
        android:id="@+id/main_app_bar"
        layout="@layout/bar_layout" />

    <TextView
        android:id="@+id/registerDoctor"
        android:drawableLeft="@drawable/ic_local_hospital_black_24dp"
        android:paddingLeft="50dp"
        android:paddingRight="30dp"
        android:layout_width="408dp"
        android:layout_height="47dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Inregistrare medic"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="303dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint=" Nume"
        android:inputType="textPersonName"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerDoctor"
        app:layout_constraintVertical_bias="0.052"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        />


    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="303dp"
        android:layout_height="42dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:ems="10"
        android:hint=" Prenume"
        android:inputType="textPersonName"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNameEditText"
        app:layout_constraintVertical_bias="0.028" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:ems="10"
        android:hint=" E mail"
        android:background="@color/white"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastNameEditText"
        app:layout_constraintVertical_bias="0.041" />

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="301dp"
        android:layout_height="42dp"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:ems="10"
        android:hint="Telefon"
        android:inputType="phone"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText"
        app:layout_constraintVertical_bias="0.03" />


    <EditText
        android:id="@+id/adressEditText"
        android:layout_width="302dp"
        android:layout_height="42dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_add_location_black_24dp"
        android:ems="10"
        android:hint=" Adresa"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneEditText"
        app:layout_constraintVertical_bias="0.062"

        />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="187dp"
        android:layout_height="52dp"
        android:background="@color/toolBarColor"
        android:text="Inregistrare"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.341" />

    <EditText
        android:id="@+id/password"
        android:layout_width="302dp"
        android:layout_height="42dp"
        android:layout_marginBottom="96dp"
        android:background="@color/white"
        android:drawableLeft="@android:drawable/ic_secure"
        android:ems="10"
        android:hint=" Parola"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titluLayout"
        app:layout_constraintVertical_bias="0.327" />

    <LinearLayout
        android:id="@+id/specializareLayout"
        android:layout_width="302dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adressEditText"
        app:layout_constraintVertical_bias="0.077">

        <TextView
            android:id="@+id/specializareTextView"
            android:layout_width="109dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Specializare"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="473dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="198dp"
            android:layout_height="42dp"
            android:background="@color/white"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="473dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/titluLayout"
        android:layout_width="302dp"
        android:layout_height="39dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/specializareLayout"
        app:layout_constraintVertical_bias="0.053">

        <TextView
            android:id="@+id/TitluTextView"
            android:layout_width="109dp"
            android:layout_height="40dp"
            android:text="Titlu"
            android:textStyle="bold"
            android:textSize="19sp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="473dp" />

        <Spinner
            android:id="@+id/titluSpinner"
            android:layout_width="198dp"
            android:layout_height="42dp"
            android:background="@color/white"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="473dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>